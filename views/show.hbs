<!-- ./views/show.handlebars -->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{restaurant.category}}
        </li>
        <li class="list-group-item">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </li>
        <li class="list-group-item">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{restaurant.phone}}
        </li>
        <li class="list-group-item my-3 text-center">{{restaurant.description}}</li>
      </ul>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 576px;">

      <div class="mt-5 button-wrapper row justify-content-center">
        <a href="/" class="w-100 btn btn-info mb-5">返回首頁</a>
      </div>
    </div>
  </div>
</div>
