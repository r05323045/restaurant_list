<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <h1 class="restaurant-show-title">修改 {{restaurant.name}} 的資訊</h1>
  <div class="container mb-md-5">
    <div class="row">
      <div class="col-12 col-md-10 col-lg-8 mx-auto">

        <div class="form-group">
          <label for="FormControlInput1">餐廳名稱</label>
          <input class="form-control" id="FormControlInput1" type="text" placeholder="請輸入餐廳名稱" name="name" value="{{restaurant.name}}" required="required">
        </div>

        <div class="form-group">
          <label for="FormControlInput2">餐廳類別</label>
          <select class="form-control" name="category" id="FormControlInput2" required>
            {{#each categoryArray}}
              <option value="{{this.name}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="FormControlInput3">餐廳地址</label>
          <input class="form-control" id="FormControlInput3" type="text" placeholder="請輸入餐廳地址" name="location" value="{{restaurant.location}}" required="required">
        </div>

        <div class="form-group">
          <label for="FormControlInput4">地址連結</label>
          <input class="form-control" id="FormControlInput4" type="url" placeholder="請輸入餐廳地址連結" name="google_map" value="{{restaurant.google_map}}" required="required">
        </div>

        <div class="form-group">
          <label for="FormControlInput5">餐廳電話</label>
          <input class="form-control" id="FormControlInput5" type="text" placeholder="請輸入餐廳電話" name="phone" value="{{restaurant.phone}}" required="required">
        </div>

        <div class="form-group">
          <label for="FormControlInput6">餐廳評價</label>
          <input class="form-control" id="FormControlInput6" type="number" placeholder="請輸入餐廳評價 (1~5)" name="rating" min="1" max="5" step="any" value="{{restaurant.rating}}" required="required">
        </div>

        <div class="form-group">
          <label for="FormControlInput7">餐廳描述</label>
          <textarea class="form-control" id="FormControlInput7" type="text" placeholder="請描述餐廳" name="description" required>{{restaurant.description}}</textarea>
        </div>

        <div class="form-group">
          <label for="FormControlInput8">餐廳照片</label>
          <input class="form-control" id="FormControlInput8" type="url" placeholder="請輸入餐廳照片連結" name="image" value="{{restaurant.image}}" required="required">
        </div>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-width: 600px;">

        <div class="mt-5 button-wrapper row justify-content-center">
          <button type="submit" class="col-12 btn btn-secondary">Update</button>
          <a href="/" class="my-3 text-secondary">返回首頁</a>
        </div>
      </div>
    </div>
  </div>
</form>